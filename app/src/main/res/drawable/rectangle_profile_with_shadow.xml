<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/rectangle_home2_with_shadow.xml -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background rectangle -->
    <item android:id="@+id/rectangleShape">
        <shape android:shape="rectangle">
            <solid android:color="#FFF0C4" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Shadow layer (diluar shape) -->
    <item  android:bottom="10dp"  android:drawable="@drawable/rectangle_profile">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <solid android:color="#D4CDBA" />
        </shape>
    </item>

</layer-list>
